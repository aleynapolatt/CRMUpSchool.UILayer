@model MailRequest
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1>SendEmail</h1>

<form class="form-group" method="post">
    <label>Recipient Mail</label>
    <input type="text" asp-for="ReceiverEmail" class="form-control" />
    <br />
    <label>Subject</label>
    <input type="text" asp-for="EmailSubject" class="form-control" />
    <br />
    <label>Mail</label>
    <textarea cols="3" rows="5" asp-for="EmailContent" class="form-control"></textarea>
    <br />
    <button class="btn btn-warning">Send</button>
</form>
