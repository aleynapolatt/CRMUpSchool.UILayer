@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<h1>Announcement List</h1>

<table class="table table-striped">
    <tr>
        <th>
            #
        </th>
        <th>Title</th>
        <th>Status</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Open Announcement</th>
    </tr>
    @foreach (var item in Model)
    {
 
        <tr>            
            <td>@item.AnnouncementID/td>
            <td>@item.Title</td>
            <td>@item.Date</td>
            <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="#" class="btn btn-outline-success">Update</a></td>
            <td><a href="#" class="btn btn-outline-dark">Details</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-outline-info">Add New Announcement</a>

