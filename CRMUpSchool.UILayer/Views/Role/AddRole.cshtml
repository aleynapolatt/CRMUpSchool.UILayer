@model RoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<h1>Add Role Page</h1>
<form method="post">
    <label>Role Name</label>
    <input type="text" asp-for="RoleName" class="form-control" />
    <span class="text-danger" asp-validation-for="RoleName">
    </span>
    <button class="btn btn-warning">Add Role</button>
</form>


