@model List<EmployeeTask>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
    int count = 0;
}

<h3>Task List</h3>
<table class="table table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>Title</th>
        <th>Status</th>
        <th>Date</th>
        <th>Personnel</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
     <tr>
        <td>@count</td>
        <td>@item.Title</td>
        <td>@item.Status</td>
        <td>@item.Date.ToString("dd.MMM.yyyy")</td>
        <td>@item.AppUser.Name @item.AppUser.Surname</td>
        <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
        <td><a href="#" class="btn btn-outline-success">Update</a></td>
        <td><a href="#" class="btn btn-outline-dark">Details</a></td>
</tr>
    }
</table>
<a href="/EmployeeTask/AddTask" class="btn btn-outline-info">New Role Entrance</a>
